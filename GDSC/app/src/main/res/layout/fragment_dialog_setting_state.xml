<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_28dp">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_logout_cancel, btn_logout_confirm, tv_logout_message" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_withdrawal_cancel, btn_withdrawal_confirm, tv_withdrawal_message" />

    <TextView
        android:id="@+id/tv_logout_message"
        style="@style/customTextViewFontStyle.Bold.S24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:text="로그아웃 하시겠습니까?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout_cancel"
        style="@style/customTextViewFontStyle.Bold.S18.gray400"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/shape_button_gray"
        android:text="@string/label_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_logout_message"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout_confirm"
        style="@style/customTextViewFontStyle.Bold.S18.green300"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/shape_button"
        android:text="@string/label_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_logout_message"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message" />

    <TextView
        android:id="@+id/tv_withdrawal_message"
        style="@style/customTextViewFontStyle.Bold.S24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:text="탈퇴 하시겠습니까?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdrawal_cancel"
        style="@style/customTextViewFontStyle.Bold.S18.gray400"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/shape_button_gray"
        android:text="@string/label_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdrawal_confirm"
        style="@style/customTextViewFontStyle.Bold.S18"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/shape_button_red"
        android:text="@string/label_confirm"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_message" />

</androidx.constraintlayout.widget.ConstraintLayout>