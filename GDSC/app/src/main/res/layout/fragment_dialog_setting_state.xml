<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_button_15dp_stroke_gray">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_logout_cancel, btn_logout_confirm, tv_logout_message" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_withdrawal_cancel, btn_withdrawal_confirm, tv_withdrawal_message" />

    <TextView
        android:id="@+id/tv_logout_message"
        style="@style/customTextViewFontStyle.Bold.S20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:text="로그아웃 하시겠어요?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout_cancel"
        style="@style/customTextViewFontStyle.Bold.S18"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_button_20dp_green"
        android:text="아니요"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toEndOf="@id/btn_logout_confirm"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout_confirm"
        style="@style/customTextViewFontStyle.Bold.S18.green300"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="19dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_20dp_gray_middle"
        android:text="네"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_logout_message"
        app:layout_constraintEnd_toStartOf="@+id/btn_logout_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message" />

    <TextView
        android:id="@+id/tv_withdrawal_message"
        style="@style/customTextViewFontStyle.Bold.S20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:text="탈퇴 하시겠습니까?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdrawal_cancel"
        style="@style/customTextViewFontStyle.Bold.S18"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_button_20dp_green"
        android:text="아니요"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_withdrawal_confirm"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdrawal_confirm"
        style="@style/customTextViewFontStyle.Bold.S18"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_button_20dp_gray_middle"
        android:text="네"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_withdrawal_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_message" />

</androidx.constraintlayout.widget.ConstraintLayout>