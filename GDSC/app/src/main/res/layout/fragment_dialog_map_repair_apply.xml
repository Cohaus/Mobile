<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/shape_button_15dp_stroke_gray">

        <TextView
            android:id="@+id/tv_repair_apply_message_Bold"
            style="@style/customTextViewFontStyle.Bold.S18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="49dp"
            android:gravity="center"
            android:text="@string/text_map_repair_apply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_repair_apply_message_medium"
            style="@style/customTextViewFontStyle.Bold.S14.gray_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="49dp"
            android:gravity="center"
            android:text="@string/text_repair_apply_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_repair_apply_message_Bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_map_apply_cancel"
            style="@style/customTextViewFontStyle.Bold.S16.white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/shape_button_20dp_gray_middle"
            android:text="@string/label_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_map_volunteer_apply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_repair_apply_message_medium" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_map_volunteer_apply"
            style="@style/customTextViewFontStyle.Bold.S16.white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/shape_button_20dp_green"
            android:text="신청하기"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_map_apply_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_repair_apply_message_medium" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>