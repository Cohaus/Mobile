<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ib_camera_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#41B574"
            android:contentDescription="@string/description_camera"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toTopOf="@id/ib_check_list_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Click"
            app:layout_constraintBottom_toBottomOf="@id/ib_camera_button"
            app:layout_constraintEnd_toEndOf="@id/ib_camera_button"
            app:layout_constraintStart_toStartOf="@id/ib_camera_button"
            app:layout_constraintTop_toTopOf="@id/ib_camera_button" />

        <ImageButton
            android:id="@+id/ib_check_list_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:contentDescription="@string/description_check_list_click"
            android:src="@drawable/ic_check_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_camera_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Click"
            app:layout_constraintEnd_toEndOf="@id/ib_check_list_button"
            app:layout_constraintStart_toStartOf="@id/ib_check_list_button"
            app:layout_constraintTop_toTopOf="@id/ib_check_list_button"
            app:layout_constraintBottom_toBottomOf="@id/ib_check_list_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>