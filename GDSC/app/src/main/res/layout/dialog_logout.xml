<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/customTextViewFontStyle.Bold.S24"
        android:id="@+id/tv_logout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃 하시겠습니까?"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/customTextViewFontStyle.Bold.S18.gray400"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:text="@string/label_cancel"
        android:background="@drawable/shape_button_gray"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintStart_toStartOf="@id/tv_logout_message"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/customTextViewFontStyle.Bold.S18.green300"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:text="@string/label_confirm"
        android:background="@drawable/shape_button"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintEnd_toEndOf="@id/tv_logout_message"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_message"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>