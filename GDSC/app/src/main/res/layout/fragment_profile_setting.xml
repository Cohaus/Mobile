<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_setting"
            style="@style/App.Toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/black_700" />

        <ImageView
            android:id="@+id/iv_setting_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/description_setting"
            android:src="@drawable/ic_setting_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_setting" />

        <TextView
            android:id="@+id/tv_setting"
            style="@style/customTextViewFontStyle.Bold.S20.gray400"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_setting"
            app:layout_constraintStart_toStartOf="@id/iv_setting_big"
            app:layout_constraintTop_toBottomOf="@id/iv_setting_big" />

        <TextView
            android:id="@+id/tv_login_info"
            style="@style/customTextViewFontStyle.Bold.S16.gray400"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_login_info"
            app:layout_constraintStart_toStartOf="@id/iv_setting_big"
            app:layout_constraintTop_toBottomOf="@id/tv_setting" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_profile_setting_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:dividerColor="@color/gray_400"
            app:dividerInsetEnd="24dp"
            app:dividerInsetStart="24dp"
            app:dividerThickness="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_info" />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/customTextViewFontStyle.Bold.S16.gray400"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/label_logout"
            app:layout_constraintStart_toStartOf="@id/iv_setting_big"
            app:layout_constraintTop_toBottomOf="@id/divider_profile_setting_one" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_profile_setting_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:dividerColor="@color/gray_100"
            app:dividerInsetEnd="24dp"
            app:dividerInsetStart="24dp"
            app:dividerThickness="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_logout" />

        <TextView
            android:id="@+id/tv_withdrawal"
            style="@style/customTextViewFontStyle.Bold.S16.gray400"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_withdrawal"
            app:layout_constraintStart_toStartOf="@id/iv_setting_big"
            app:layout_constraintTop_toBottomOf="@id/divider_profile_setting_two" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>