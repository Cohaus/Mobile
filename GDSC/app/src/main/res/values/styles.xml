<resources>
    <style name="App.Toolbar" parent="Widget.Material3.Toolbar" >
        <item name="titleCentered">false</item>
    </style>

    <style name="AppTheme" parent="Widget.Material3.Toolbar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomNavigationStyle">
        <item name="android:background">@color/gray_50</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_color</item>
        <item name="itemActiveIndicatorStyle">@color/gray_50</item>
    </style>
    
    <style name="AppButtonSelector" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/customTextViewFontStyle.Bold.S18</item>
        <item name="android:background">@drawable/selector_join_confirm</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/AppBottSheetModal</item>
    </style>

    <style name="AppBottSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
    <item name="android:backgroundTint">@android:color/transparent</item>
    <item name="behavior_peekHeight">180dp</item>
    </style>


    <style name="AppRoundImage">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="btnShape">
        <item name="background">@drawable/shape_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green_300</item>
    </style>
    
    <style name="BtnSelectorRightAndGreen">
        <item name="android:background">@drawable/selector_record_save</item>
    </style>>

